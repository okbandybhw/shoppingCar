@model IEnumerable<prjShoppingCar.Models.tOrderDetailData>

@{
    ViewBag.Title = "購物車清單";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<h2>購物車清單</h2>

<table class="table" style="text-align:center;vertical-align:middle">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.orderDetail.fOrderGuid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orderDetail.fUserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orderDetail.fPId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product.fImg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orderDetail.fName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orderDetail.fPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orderDetail.fQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orderDetail.fIsApproved)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.orderDetail.fOrderGuid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.orderDetail.fUserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.orderDetail.fPId)
        </td>
        <td>
            <img src="~/images/@item.product.fImg" style="width:80px;height:108px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.orderDetail.fName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.orderDetail.fPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.orderDetail.fQty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.orderDetail.fIsApproved)
        </td>
        <td>
            <a href="@Url.Action("DeleteCar")?fId=@item.orderDetail.fId" class="btn btn-danger" onclick="return confirm('確定放棄購買 @item.orderDetail.fName 嗎?')">
                刪除購物車
            </a>
        </td>
    </tr>
}

</table>

<form action="@Url.Action("ShoppingCar")" method="post">
    <div class="form-horizontal">
        <h4>填寫訂單收件人資料</h4>
        <hr />

        <div class="form-group">
            <span class="control-label col-md-2">收件人姓名</span>
            <div class="col-md-10">
                <input type="text" id="fReceiver" name="fReceiver" required="required" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">收件人信箱</span>
            <div class="col-md-10">
                <input type="text" id="fEmail" name="fEmail" required="required" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">收件人地址</span>
            <div class="col-md-10">
                <input type="text" id="fAddress" name="fAddress" required="required" class="form-control" />
            </div>
        </div>

        <p></p>
        <div class="form-group">
            <div class="control-md-offset-2 col-md-10">
                <input type="submit" value="確認訂購" class="btn btn-dark" />
            </div>
        </div>
    </div>
</form>
